        <Viewbox Name="Vbx_AccionesDenuncia" HorizontalAlignment="Center"  Grid.Row="1" Grid.Column="2"  MaxHeight="150" Visibility="Hidden" >

            <Border Background="#AA1E1E1E" CornerRadius="15" Padding="15" Margin="10"
                BorderBrush="White"  BorderThickness="1" >
                <StackPanel Width="160" Background="#1E1E1E" >
                    <Button Content="📄 Crear" Height="50" Margin="5" Background="#007ACC"  Foreground="White" FontWeight="Bold" FontSize="16" BorderBrush="#BDBDBD" BorderThickness="1" Click="BtnCrearDenuncia"/>
                    <Button Content="⏪ Volver" Height="50" Margin="5" Background="#007ACC"  Foreground="White" FontWeight="Bold" FontSize="16" Cursor="Hand" BorderBrush="#BDBDBD" BorderThickness="1" Click="Btn_Volver"/>
                </StackPanel>
            </Border>
        </Viewbox>


        <Viewbox x:Name="Vbx_Datos" Grid.Row="1" Grid.Column="0" Visibility="Hidden" Grid.ColumnSpan="3">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                <!-- Panel con efecto Glassmorphism -->
                <Border Background="#AA1E1E1E" CornerRadius="15" Padding="15" Margin="10"
                     BorderBrush="White" BorderThickness="1" >

                    <DataGrid x:Name="DtGrd_Datos" AutoGenerateColumns="True"
               Background="Transparent" 
               RowHeight="30"
               ColumnHeaderHeight="35"
               IsReadOnly="True"
               SelectionChanged="Dgv_SeleccionarDatos"
               Width="450" Height="450"
               BorderBrush="Transparent"
               GridLinesVisibility="None">

                        <!-- Estilo para el encabezado -->
                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#007ACC"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Padding" Value="5"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </DataGrid.Resources>

                        <!-- Estilo de celdas -->
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Padding" Value="5"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Background" Value="Transparent"/>
