                        <ComboBoxItem Content="Eliminar"></ComboBoxItem>
                        <ComboBoxItem Content="Modificar"></ComboBoxItem>
                    </ComboBox>
                </StackPanel>
            </Border>
        </Viewbox>

        <Viewbox Name="Vbx_AccionesIncidencia" HorizontalAlignment="Center"  Grid.Row="1" Grid.Column="2"  MaxHeight="150" Visibility="Hidden" >

            <Border Background="#AA1E1E1E" CornerRadius="15" Padding="15" Margin="10"
          BorderBrush="White"  BorderThickness="1">
                <StackPanel Width="160" Name="Stkpnl_AccionesIncidencia" Background="#1E1E1E" >
                    <Button Content="📝 Añadir" Height="50" Margin="5" Background="#007ACC"  Foreground="White" FontWeight="Bold" FontSize="16" BorderBrush="#BDBDBD" BorderThickness="1" Click="BtnCrearIncidencia"/>
                    <Button Content="⏪ Volver" Height="50" Margin="5" Background="#007ACC"  Foreground="White" FontWeight="Bold" FontSize="16" Cursor="Hand" BorderBrush="#BDBDBD" BorderThickness="1" Click="Btn_Volver"/>
                </StackPanel>
            </Border>
        </Viewbox>
