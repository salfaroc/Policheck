                    <TextBox x:Name="txtPrimerApellCiu" Margin="5" Width="180"  Foreground="Black" BorderBrush="#BDBDBD" BorderThickness="1"/>

                    <Label Content="2ºApellido" Foreground="White"  HorizontalAlignment="Center"/>
                    <TextBox x:Name="txtSegunApellCiu" Margin="5" Width="180"  Foreground="Black" BorderBrush="#BDBDBD" BorderThickness="1"/>

                    <Label Content="Género" Foreground="White"  HorizontalAlignment="Center"/>
                    <ComboBox x:Name="cmbxGeneroCiu" Margin="5" Width="180" Foreground="Black" BorderBrush="#BDBDBD" BorderThickness="1" IsEditable="False">
                        <ComboBoxItem Content="M" />
