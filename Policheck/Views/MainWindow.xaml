<Window x:Class="Policheck.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Policheck"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="White" WindowState="Maximized" ShowInTaskbar="False" WindowStyle="None">



    <Grid x:Name="MainGrid" >
        <!-- Definir Columnas y Filas -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Menú -->
            <RowDefinition/>
            <RowDefinition Height="Auto"></RowDefinition >
            <RowDefinition Height="Auto"></RowDefinition>

            <!-- Contenido principal -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition  />
            <!-- Izquierda (TextBox) -->
            <ColumnDefinition />
            <ColumnDefinition />
            <!-- Derecha (DataGrid) -->
        </Grid.ColumnDefinitions>

        <Viewbox x:Name="Vbx_InicioSesion" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="1" Grid.RowSpan="4" Visibility="Visible" d:IsHidden="True">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Logo -->
                <Image Source="/Imagenes/LogoPolicheck.png" Height="150" MaxWidth="500" Stretch="Uniform"/>

                <!-- Panel de Fondo con Efecto Glassmorphism -->
                <Border Background="#AA1E1E1E" CornerRadius="15" Padding="25" Margin="10"
                        BorderBrush="White" BorderThickness="1" >

                    <StackPanel HorizontalAlignment="Center">
                        <Label Content="Numero Placa" FontSize="16" FontWeight="Bold" Foreground="White" Margin="5" HorizontalAlignment="Center"/>
                        <TextBox x:Name="txtPlaca" MinHeight="30" Width="220" Background="#CC333333"
                            Foreground="White" BorderBrush="White" FontSize="14" Margin="5"/>

                        <Label Content="Contraseña" FontSize="16" FontWeight="Bold" Foreground="White" Margin="5" HorizontalAlignment="Center"/>
                        <PasswordBox x:Name="pwdContraseña" MinHeight="30" Width="220" Background="#CC333333"
                      Foreground="White" BorderBrush="White" FontSize="14" Margin="5"/>

                        <Button Content="Iniciar Sesión" Margin="15" MinHeight="40" Width="220"
                 Background="#007ACC" Foreground="White" FontWeight="Bold" FontSize="16"
                 BorderThickness="0" Cursor="Hand" Click="BtnEntrar"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Viewbox>



        <Menu Name="mnu_Inicial"  Grid.Row="0" Grid.ColumnSpan="2" 
        FontSize="25" Foreground="White" Background="{x:Null}" Visibility="Collapsed">
            <Menu.Resources>
                <!-- Estilo para los elementos del menú -->
                <Style TargetType="MenuItem">
                    <Setter Property="Padding" Value="5"/>
                    <!-- Espaciado interno -->
                    <Setter Property="Margin" Value="5"/>
                    <!-- Espaciado externo -->
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Foreground" Value="White" />

                    <!-- Efecto Hover -->
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="Black"/>
                            <!-- Color al pasar el mouse -->
                            <Setter Property="FontSize" Value="27"/>
                            <!-- Aumenta tamaño en hover -->
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Menu.Resources>

            <MenuItem Header="Funcionario" FontSize="15">
                <MenuItem Header="Mis Datos" Click="BtnPerfil"   Background="Black"></MenuItem>
                <MenuItem Header="Crear Incidencia" Background="Black" Click="BtnCrearInciencia"></MenuItem>
                <Separator Name="SeparatorFunc" Background="Black" FontSize="10"></Separator>
                <MenuItem Name="MnuItm_AltaFunc" Header="Alta Funcionario"  Click="BtnAltaFuncionario" Background="Black"></MenuItem>

            </MenuItem>
            <MenuItem Header="Ciudadano" FontSize="15" >
                <MenuItem Header="Alta ciudadano"  Background="Black" Click="BtnAltaCiudadano" ></MenuItem>
            </MenuItem>
            <MenuItem Header="Denuncia" FontSize="15" >
                <MenuItem Header="Nueva denuncia"  Background="Black" Click="BtnDenuncia"></MenuItem>
            </MenuItem>

            <MenuItem Header="Ver" FontSize="15">
                <MenuItem Header="Ver Ciudadanos" Background="Black" Click="Btn_VerCiudadanos"></MenuItem>
                <MenuItem Header="Ver Denuncias" Background="Black" Click="Btn_VerDenuncias"></MenuItem>
                <Separator Name="SeparatorVer" Background="Black" FontSize="10"></Separator>
                <MenuItem Name="MnuItm_VerFunc" Header="Ver Funcionarios" Background="Black" Click="Btn_VerFuncionarios"></MenuItem>
            </MenuItem>

            <MenuItem Header="Opciones" FontSize="15">
                <MenuItem Header="Cerrar Sesión" FontSize="15" Click="Btn_CerrarSesion" Background="Black"/>
            </MenuItem>

        </Menu>

        <Image Name="Img_Menu" Source="/Imagenes/LogoPolicheck.png" Height="150" Grid.Column="1" Grid.Row="1" MaxWidth="500" Stretch="Uniform" Visibility="Collapsed">

        </Image>

        <Grid Name="grdMiPlaca"  Grid.Column="1" Grid.Row="0" Visibility="Collapsed">
            <!-- Imagen -->
            <Image Name="Img_Placa" Source="/Imagenes/placa.png" Height="150" MaxWidth="400" Visibility="Visible" />

            <!-- Label encima de la imagen -->
            <Label Name="lbl_MiNumeroPlaca"  HorizontalAlignment="Center"  VerticalAlignment="Top" Foreground="Black" FontSize="11" Margin="0,94,0,0" Height="27" Width="48" />
        </Grid>


        <Button x:Name="CloseButton"
        Content="✖"
        Grid.Column="2"
        Width="40" Height="40"
        FontSize="20"
        FontWeight="Bold"
        Foreground="White"
        Background="Black"
        Opacity="0.7"
        Cursor="Hand"
        BorderThickness="0"
        HorizontalAlignment="Right"
        VerticalAlignment="Top"
        Margin="10"
        Click="CloseButton_Click"/>


        <Viewbox Name="Vbx_MenuBotones" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="0" MaxHeight="530" Visibility="Collapsed">
            <Border Background="#AA1E1E1E" CornerRadius="15" Padding="15" Margin="10"
    BorderBrush="White" BorderThickness="1">
                <StackPanel Width="200" Background="#1E1E1E">
                    <Button Content="Alta Ciudadano" Height="50" Margin="5" Background="#1976D2" Foreground="White" 
            FontWeight="Bold" BorderBrush="#BDBDBD" BorderThickness="1"  Click="BtnAltaCiudadano"/>
                    <Button Content="Crear Denuncia" Height="50" Margin="5" Background="#1976D2" Foreground="White" 
             FontWeight="Bold" BorderBrush="#BDBDBD" BorderThickness="1" Click="BtnDenuncia" />
                    <Button Content="Crear Incidencia" Height="50" Margin="5" Background="#1976D2" Foreground="White"
            FontWeight="Bold" BorderBrush="#BDBDBD" BorderThickness="1" Click="BtnCrearInciencia" />
                    <Button Content="Ver Ciudadanos" Height="50" Margin="5" Background="#1976D2" Foreground="White" 
            FontWeight="Bold" BorderBrush="#BDBDBD" BorderThickness="1" Click="Btn_VerCiudadanos" />
                    <Button Content="Ver Denuncias" Height="50" Margin="5" Background="#1976D2" Foreground="White"
            FontWeight="Bold" BorderBrush="#BDBDBD" BorderThickness="1" Click="Btn_VerDenuncias"/>
                    <Button Content="Cerrar Sesión" Height="50" Margin="5" Background="#1976D2" Foreground="White"
            FontWeight="Bold" BorderBrush="#BDBDBD" BorderThickness="1" Click="Btn_CerrarSesion"
                    />

                    
                </StackPanel>
            </Border>
        </Viewbox>

        <Viewbox x:Name="Vbx_Perfil" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Grid.RowSpan="4" Visibility="Hidden">
            <Border  Background="#AA1E1E1E" BorderThickness="2" BorderBrush="White" Grid.Row="1" Grid.ColumnSpan="3" CornerRadius="5" Padding="10" Margin="133,26,118,26"  >
                <StackPanel>
                    <Label Content="Datos de Perfil"  FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Foreground="White"  />
                    <Grid Height="269">
                        <!-- Definir filas y columnas -->
                        <Grid.RowDefinitions>

                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />

                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition  />
                            <ColumnDefinition  />


                        </Grid.ColumnDefinitions>

                        <!-- Controles de perfil (sin etiquetas) -->
                        <TextBox Name="txtbx_Nombre" Margin="5" Grid.Row="1" Grid.ColumnSpan="1" Grid.Column="0" Text="" Width="170" IsReadOnly="True" Visibility="Visible"   />
                        <TextBox Name="txtbx_Dni" Margin="5" Grid.Row="2" Grid.Column="0" Text="" Width="170" IsReadOnly="True" Visibility="Visible" />
                        <TextBox Name="txtbx_FechNac" Margin="5" Grid.Row="3" Grid.Column="0" Text="" Width="170" IsReadOnly="True" Visibility="Visible" />
                        <TextBox Name="txtbx_Rango" Margin="5" Grid.Row="6" Grid.Column="0" Text="" Width="170" IsReadOnly="True" Visibility="Visible"  />
                        <TextBox Name="txtbx_Telefono" Margin="5" Grid.Row="4" Grid.Column="0" Text="" Width="170" IsReadOnly="True" Visibility="Visible" />
                        <TextBox Name="txtbx_Genero" Margin="5" Grid.Row="6" Grid.Column="1" Text="" Width="170" IsReadOnly="True" Visibility="Visible"  />
                        <TextBox Name="txtbx_Correo" Margin="5" Grid.Row="5" Grid.Column="0" Text="" Width="170" IsReadOnly="True" Visibility="Visible"  />
                        <TextBox Name="txtbx_Turno"  Margin="5" Grid.Row="8" Grid.Column="0" Text="" Width="170" IsReadOnly="True" Visibility="Visible"  />
                        <TextBox Name="txtbx_Distrito" Margin="5" Grid.Row="7" Grid.Column="0" Text="" Width="170" IsReadOnly="True" Visibility="Visible"  />
                        <TextBox Name="txtbx_NPlaca"  Margin="5" Grid.Row="7" Grid.Column="1" Text="" Width="170" IsReadOnly="True" Visibility="Visible" />

                        <!-- Imagen de perfil -->
                        <Image Name="img_Perfil" Grid.Row="1" Grid.RowSpan="3" Grid.Column="4" Height="131" VerticalAlignment="Center" Source="/Views/fotoperfil.png" Visibility="Visible" />

                        <!-- Botón Ver Méritos -->
                        <Button Name="btn_Meritos" Grid.Row="4" Grid.Column="1" Content="VER" Width="72" Background="White" Visibility="Visible" Click="Btn_Meritos" Margin="92,15,92,15" Grid.RowSpan="2" />
                        <Button Name="btn_Volver" Grid.Column="1" Content="Volver" Width="72" HorizontalAlignment="Right" Background="White" Visibility="Visible" Click="Btn_Volver"  />
                    </Grid>
                </StackPanel>

            </Border>
        </Viewbox>

        <Viewbox Name="Vbx_Funcionario" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="1" MaxHeight="800" Visibility="Hidden">

            <Border Background="#AA1E1E1E" CornerRadius="15" Padding="15" BorderBrush="White" BorderThickness="1" Width="250" >
                <StackPanel Width="220">
                    <Label Content="Nº Placa" Foreground="White"  HorizontalAlignment="Center"/>
                    <TextBox Name="txtNumeroPlaca" Margin="5" Width="180"  Foreground="Black" BorderBrush="#BDBDBD" BorderThickness="1" IsReadOnly="True"/>

                    <Label Content="DNI" Foreground="White"  HorizontalAlignment="Center"/>
                    <TextBox Name="txtDNI" Margin="5" Width="180"   Foreground="Black" BorderBrush="#BDBDBD" BorderThickness="1"/>

                    <Label Content="Nombre" Foreground="White"  HorizontalAlignment="Center"/>
                    <TextBox Name="txtNombreFunc" Margin="5" Width="180"  Foreground="Black" BorderBrush="#BDBDBD" BorderThickness="1"/>

                    <Label Content="Contraseña" Foreground="White"  HorizontalAlignment="Center"/>
                    <PasswordBox Name="passFuncionario" Margin="5" Width="180"   Foreground="Black" BorderBrush="#BDBDBD" BorderThickness="1"/>

                    <Label Content="1ºApellido" Foreground="White"  HorizontalAlignment="Center"/>
                    <TextBox Name="txtPrimerApell" Margin="5" Width="180"  Foreground="Black" BorderBrush="#BDBDBD" BorderThickness="1"/>

                    <Label Content="2ºApellido" Foreground="White"  HorizontalAlignment="Center"/>
                    <TextBox Name="txtSegunApell" Margin="5" Width="180"  Foreground="Black" BorderBrush="#BDBDBD" BorderThickness="1"/>

                    <Label Content="Género" Foreground="White"  HorizontalAlignment="Center"/>
                    <ComboBox Name="cmbxGenero" Margin="5" Width="180" Foreground="Black" BorderBrush="#BDBDBD" BorderThickness="1" IsEditable="False">
                        <ComboBoxItem Content="M" />
