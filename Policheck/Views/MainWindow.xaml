            <Border Background="#AA1E1E1E" CornerRadius="15" Padding="15" BorderBrush="White" BorderThickness="1" Width="250"  >
                <StackPanel Width="220">
                    <Label Content="Dni" Foreground="White"  HorizontalAlignment="Center"/>
                    <TextBox Name="txtDniDenuncia" Margin="5" Width="180"  Foreground="Black" BorderBrush="#BDBDBD" BorderThickness="1" />

                    <Label Content="Titulo" Foreground="White"  HorizontalAlignment="Center"/>
                    <TextBox Name="txtTituloDen"  Margin="5" Width="180"   Foreground="Black" BorderBrush="#BDBDBD" BorderThickness="1"/>

                    <Label Content="Descripcion" Foreground="White"  HorizontalAlignment="Center"/>
                    <TextBox Name="txtDescripcionDen"  Margin="5" Width="180"  Foreground="Black" BorderBrush="#BDBDBD" BorderThickness="1" Height="66"/>

                    <Label Content="Direccion" Foreground="White"  HorizontalAlignment="Center"/>
                    <TextBox Name="txtDireccionDen"  Margin="5" Width="180"  Foreground="Black" BorderBrush="#BDBDBD" BorderThickness="1" />


                    <Label Content="Codigo Postal" Foreground="White"  HorizontalAlignment="Center"/>
                    <TextBox Name="txtCPDen"  Margin="5" Width="180"  Foreground="Black" BorderBrush="#BDBDBD" BorderThickness="1" />

